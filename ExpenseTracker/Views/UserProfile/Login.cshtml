@model UserProfile
@{
    Layout = "_LayoutUserProfile";
    ViewData["Title"] = "Login";
}
<div class="container">
    <h3 class="mt-3 text-center">User Login</h3>
    <hr />
<form method="post" asp-action="Login">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email address</label>
        <input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="text-danger"></span>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-controller="UserProfile" asp-action="Registration" class="btn btn-warning mx-2">Register</a>
</form>
</div>